      <imsld:method>
        <imsld:play identifier="play-882dee5c-ea7d-49f3-96d4-7a84d5b825b1" isvisible="true">
          <imsld:title>Test</imsld:title>
          <imsld:act identifier="act-df86776b-b175-446f-a561-b00022e2d5a0">
            <imsld:title>Phase 1</imsld:title>
            <imsld:role-part identifier="rolepart-3c265df4-05ef-430e-a7f1-579fd16582ea">
              <imsld:title>Role Part</imsld:title>
              <imsld:role-ref ref="student" />
              <imsld:learning-activity-ref ref="la-a9b56a72-3a48-4c57-8472-63cb3260eeb7" />
            </imsld:role-part>
          </imsld:act>
        </imsld:play>
        <imsld:play identifier="play-b63bf573-46b6-44c6-ae25-4186f9e86186" isvisible="true">
          <imsld:title>Select your Mark</imsld:title>
          <imsld:act identifier="act-4e897e3e-2422-40ef-9a28-64cc55dbad9a">
            <imsld:title>Will you pass the Quiz "to be completed"?</imsld:title>
            <imsld:role-part identifier="rolepart-eb2950f0-3850-43f4-b821-5e33c13fad5c">
              <imsld:title>Student</imsld:title>
              <imsld:role-ref ref="student" />
              <imsld:activity-structure-ref ref="questionsandanswers" />
            </imsld:role-part>
            <imsld:role-part identifier="rolepart-63b6759f-d659-4454-8e86-d9591aa024c7">
              <imsld:title>Student</imsld:title>
              <imsld:role-ref ref="student" />
              <imsld:learning-activity-ref ref="flow1" />
            </imsld:role-part>
            <imsld:role-part identifier="rolepart-2d85a14d-8690-4b46-b3fe-c322edcf2b9a">
              <imsld:title>Student</imsld:title>
              <imsld:role-ref ref="student" />
              <imsld:learning-activity-ref ref="flow2" />
            </imsld:role-part>
            <imsld:role-part identifier="rolepart-789b0152-e723-4c2b-8049-d962bf801ab5">
              <imsld:title>Role Part</imsld:title>
              <imsld:role-ref ref="student" />
              <imsld:learning-activity-ref ref="flow3" />
            </imsld:role-part>
          </imsld:act>
        </imsld:play>
        <imsld:conditions>
          <imsld:if>
            <imsld:is>
              <imsld:property-ref ref="Answer1" />
              <imsld:property-value>4-6</imsld:property-value>
            </imsld:is>
          </imsld:if>
          <imsld:then>
            <imsld:change-property-value>
              <imsld:property-ref ref="Value1" />
              <imsld:property-value>100</imsld:property-value>
            </imsld:change-property-value>
          </imsld:then>
          <imsld:else>
            <imsld:if>
              <imsld:is>
                <imsld:property-ref ref="Answer1" />
                <imsld:property-value>0-3</imsld:property-value>
              </imsld:is>
            </imsld:if>
            <imsld:then>
              <imsld:change-property-value>
                <imsld:property-ref ref="Value1" />
                <imsld:property-value>55</imsld:property-value>
              </imsld:change-property-value>
            </imsld:then>
          </imsld:else>
          <imsld:if>
            <imsld:is-not>
              <imsld:property-ref ref="Answer1" />
              <imsld:property-value>Select</imsld:property-value>
            </imsld:is-not>
          </imsld:if>
          <imsld:then>
            <imsld:change-property-value>
              <imsld:property-ref ref="all-questions" />
              <imsld:property-value>1</imsld:property-value>
            </imsld:change-property-value>
          </imsld:then>
          <imsld:if>
            <imsld:is>
              <imsld:property-ref ref="all-questions" />
              <imsld:property-value>1</imsld:property-value>
            </imsld:is>
          </imsld:if>
          <imsld:then>
            <imsld:show>
              <imsld:class class="Answered" with-control="false" />
            </imsld:show>
          </imsld:then>
          <imsld:else>
            <imsld:hide>
              <imsld:class class="Answered" with-control="false" />
            </imsld:hide>
          </imsld:else>
          <imsld:if>
            <imsld:is>
              <imsld:property-ref ref="all-questions" />
              <imsld:property-value>1</imsld:property-value>
            </imsld:is>
          </imsld:if>
          <imsld:then>
            <imsld:change-property-value>
              <imsld:property-ref ref="total" />
              <imsld:property-value>
                <imsld:calculate>
                  <imsld:sum>
                    <imsld:property-ref ref="Value5" />
                    <imsld:sum>
                      <imsld:property-ref ref="Value4" />
                      <imsld:sum>
                        <imsld:property-ref ref="Value3" />
                        <imsld:sum>
                          <imsld:property-ref ref="Value1" />
                          <imsld:property-ref ref="Value2" />
                        </imsld:sum>
                      </imsld:sum>
                    </imsld:sum>
                  </imsld:sum>
                </imsld:calculate>
              </imsld:property-value>
            </imsld:change-property-value>
            <imsld:change-property-value>
              <imsld:property-ref ref="average" />
              <imsld:property-value>
                <imsld:calculate>
                  <imsld:divide>
                    <imsld:property-ref ref="total" />
                    <imsld:property-ref ref="number-questions" />
                  </imsld:divide>
                </imsld:calculate>
              </imsld:property-value>
            </imsld:change-property-value>
            <imsld:change-property-value>
              <imsld:property-ref ref="accuracy" />
              <imsld:property-value>
                <imsld:calculate>
                  <imsld:multiply>
                    <imsld:property-ref ref="total" />
                    <imsld:property-value>1</imsld:property-value>
                  </imsld:multiply>
                </imsld:calculate>
              </imsld:property-value>
            </imsld:change-property-value>
          </imsld:then>
          <imsld:if>
            <imsld:less-than>
              <imsld:property-ref ref="accuracy" />
              <imsld:property-value>1</imsld:property-value>
            </imsld:less-than>
          </imsld:if>
          <imsld:then>
            <imsld:hide>
              <imsld:learning-activity-ref ref="flow1" />
              <imsld:learning-activity-ref ref="flow2" />
              <imsld:learning-activity-ref ref="flow3" />
            </imsld:hide>
          </imsld:then>
          <imsld:else>
            <imsld:if>
              <imsld:and>
                <imsld:greater-than>
                  <imsld:property-ref ref="accuracy" />
                  <imsld:property-value>0</imsld:property-value>
                </imsld:greater-than>
                <imsld:less-than>
                  <imsld:property-ref ref="accuracy" />
                  <imsld:property-value>50</imsld:property-value>
                </imsld:less-than>
              </imsld:and>
            </imsld:if>
            <imsld:then>
              <imsld:show>
                <imsld:learning-activity-ref ref="flow1" />
              </imsld:show>
              <imsld:hide>
                <imsld:learning-activity-ref ref="flow2" />
                <imsld:learning-activity-ref ref="flow3" />
              </imsld:hide>
              <imsld:change-property-value>
                <imsld:property-ref ref="prop-feedback" />
                <imsld:property-value>Sorry, your score is insuficient. You must read more and try again later. Please, select the next learning activity. You are in Level 1</imsld:property-value>
              </imsld:change-property-value>
            </imsld:then>
            <imsld:else>
              <imsld:if>
                <imsld:and>
                  <imsld:greater-than>
                    <imsld:property-ref ref="accuracy" />
                    <imsld:property-value>49</imsld:property-value>
                  </imsld:greater-than>
                  <imsld:less-than>
                    <imsld:property-ref ref="accuracy" />
                    <imsld:property-value>76</imsld:property-value>
                  </imsld:less-than>
                </imsld:and>
              </imsld:if>
              <imsld:then>
                <imsld:show>
                  <imsld:learning-activity-ref ref="flow2" />
                </imsld:show>
                <imsld:hide>
                  <imsld:learning-activity-ref ref="flow1" />
                  <imsld:learning-activity-ref ref="flow3" />
                </imsld:hide>
                <imsld:change-property-value>
                  <imsld:property-ref ref="prop-feedback" />
                  <imsld:property-value>Well done! Your score is promising. Anyway, if you read more about Geography you would improve quite a lot. Please, select the next learning activity. You are in Level 2</imsld:property-value>
                </imsld:change-property-value>
              </imsld:then>
              <imsld:else>
                <imsld:show>
                  <imsld:learning-activity-ref ref="flow3" />
                </imsld:show>
                <imsld:hide>
                  <imsld:learning-activity-ref ref="flow1" />
                  <imsld:learning-activity-ref ref="flow2" />
                </imsld:hide>
                <imsld:change-property-value>
                  <imsld:property-ref ref="prop-feedback" />
                  <imsld:property-value>Congratulations! You have made a great score. It´s sure that you know much about Geography. Pleae, select the next learning activity. You are in Level 3</imsld:property-value>
                </imsld:change-property-value>
              </imsld:else>
            </imsld:else>
          </imsld:else>
        </imsld:conditions>
      </imsld:method>
